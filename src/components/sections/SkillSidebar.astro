---
import { skills } from '../../data/skills';

interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;
---
<aside class="w-80 p-6 bg-[color:var(--color-surface)] rounded-xl shadow-md sticky top-8">
  <h2 class="text-2xl font-extrabold mb-6 text-foreground">Services</h2>
  <ul class="space-y-3">
    {skills.map(skill => {
      const isActive = currentSlug === skill.slug;
      return (
        <li>
          <a
            href={`/skills/${skill.slug}`}
            class={`block px-3 py-2 rounded transition-colors text-lg font-semibold no-underline ${
              isActive
                ? 'bg-[color:var(--accent)] text-white'
                : 'text-foreground hover:bg-[color:var(--accent)] hover:text-white'
            }`}
          >
            {skill.title}
          </a>
        </li>
      );
    })}
  </ul>
</aside>
